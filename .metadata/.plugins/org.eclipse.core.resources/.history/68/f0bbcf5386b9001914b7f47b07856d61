<script type="text/javascript">


function btnClicked(){
	 var delConfirm = confirm('주문하시겠습니까?');
	   if (delConfirm) {
	      alert('주문완료 되었습니다. 잠시만 기다려주세요.');
	      
	   }
	   else {
	      alert('주문이 취소되었습니다.');
	      
	   }
}

</script>



